<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_50dp"
    android:layout_marginTop="@dimen/_10dp">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_send_wtsp_corner">

        <!--app:cardBackgroundColor="@color/sender_bg_color"-->
        <!--android:background="@drawable/bg_send_msg"-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">
            <!--android:background="@drawable/bg_sender"-->

            <ImageView
                android:id="@+id/imgSenderImage"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_150dp"
                android:layout_marginHorizontal="@dimen/_20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_placeholder"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete_msg" />

                    <TextView
                        android:id="@+id/txtMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="hi"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="10:30 am"
                        android:textColor="@color/grey_66"
                        android:textSize="@dimen/_12sp" />

                    <ImageView
                        android:id="@+id/imgSeen"
                        android:layout_width="@dimen/_15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="@dimen/_5dp"
                        android:src="@drawable/ic_seen_msg"
                        app:tint="@color/grey_66" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>

