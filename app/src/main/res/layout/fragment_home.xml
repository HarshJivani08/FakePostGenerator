<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_25dp"
            android:paddingTop="@dimen/_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/welcome_to"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp" />

            <ImageView
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_50dp"
                android:layout_marginTop="@dimen/_5dp"
                android:src="@drawable/ic_logo_text" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/imgMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginEnd="@dimen/_20dp"
            app:cardElevation="@dimen/_10dp">

            <!--android:background="@drawable/bg_icon"-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp"
                android:src="@drawable/ic_menu" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_25dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/lNewPost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/_10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_20sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_new_post_home"
                        android:paddingStart="@dimen/_30dp"
                        android:paddingTop="@dimen/_20dp">

                        <TextView
                            android:id="@+id/txtCreate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/create"
                            android:textColor="@color/black_21"
                            android:textSize="@dimen/_20sp" />

                        <TextView
                            android:id="@+id/txtNewPost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtCreate"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/new_post"
                            android:textColor="@color/black_35"
                            android:textSize="@dimen/_22sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginVertical="@dimen/_20dp"
                            android:src="@drawable/ic_arrow_right" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_new_post_home" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/lReviewPost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/_10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_20sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_review_post_home"
                        android:paddingStart="@dimen/_30dp"
                        android:paddingTop="@dimen/_20dp">

                        <TextView
                            android:id="@+id/txtCreateReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/create"
                            android:textColor="@color/black_21"
                            android:textSize="@dimen/_20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtCreateReview"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/review_post"
                            android:textColor="@color/black_35"
                            android:textSize="@dimen/_22sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/_20dp"
                            android:src="@drawable/ic_arrow_right" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_review_post_home" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/lFakePost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/_10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_20sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_social_media_post_home"
                        android:paddingStart="@dimen/_30dp"
                        android:paddingTop="@dimen/_20dp">

                        <TextView
                            android:id="@+id/txtCreateFakePost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/create"
                            android:textColor="@color/black_21"
                            android:textSize="@dimen/_20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtCreateFakePost"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_toStartOf="@+id/imgSocialMedia"
                            android:text="@string/social_media_post"
                            android:textColor="@color/black_35"
                            android:textSize="@dimen/_22sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginVertical="@dimen/_20dp"
                            android:src="@drawable/ic_arrow_right" />

                        <ImageView
                            android:id="@+id/imgSocialMedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_social_media_post_home" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/lQuotePost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/_10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_20sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_quote_post_home"
                        android:paddingStart="@dimen/_30dp"
                        android:paddingTop="@dimen/_20dp">

                        <TextView
                            android:id="@+id/txtCreateQuote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/create"
                            android:textColor="@color/black_21"
                            android:textSize="@dimen/_20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtCreateQuote"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/quote_post"
                            android:textColor="@color/black_35"
                            android:textSize="@dimen/_22sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginVertical="@dimen/_20dp"
                            android:src="@drawable/ic_arrow_right" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_quote_post_home" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>




            </LinearLayout>




        </ScrollView>
    </LinearLayout>

</RelativeLayout>