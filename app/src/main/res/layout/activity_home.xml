<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".ui.theme.ui.HomeActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_25dp"
            android:paddingTop="@dimen/_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/welcome_to"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sp" />

<!--            <ImageView-->
<!--                android:layout_width="@dimen/_150dp"-->
<!--                android:layout_height="@dimen/_50dp"-->
<!--                android:layout_marginTop="@dimen/_5dp"-->
<!--                android:src="@drawable/ic_logo_text" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/salsa_regular"
                android:text="QMAKER.LY"
                android:textColor="@color/pink"
                android:textSize="@dimen/_22sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/imgMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginEnd="@dimen/_20dp"
            app:cardBackgroundColor="@color/app_bg"
            app:cardElevation="@dimen/_20dp">

            <!--android:background="@drawable/bg_icon"-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp"
                android:src="@drawable/ic_menu" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_25dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/lInstagramPost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_50dp"
                    app:cardCornerRadius="@dimen/_20sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_insta_post_home">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toEndOf="@+id/imgInsta"
                            android:paddingHorizontal="@dimen/_15dp"
                            android:paddingVertical="@dimen/_40dp">

                            <TextView
                                android:id="@+id/txtCreate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/create"
                                android:textColor="@color/black_21"
                                android:textSize="@dimen/_20sp" />

                            <TextView
                                android:id="@+id/txtNewPost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txtCreate"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Instagram Post"
                                android:textColor="@color/black_35"
                                android:textSize="@dimen/_22sp" />

                            <!--                        <ImageView-->
                            <!--                            android:layout_width="wrap_content"-->
                            <!--                            android:layout_height="wrap_content"-->
                            <!--                            android:layout_alignParentStart="true"-->
                            <!--                            android:layout_alignParentBottom="true"-->
                            <!--                            android:layout_marginVertical="@dimen/_20dp"-->
                            <!--                            android:src="@drawable/ic_arrow_right" />-->

                            <!--                        <ImageView-->
                            <!--                            android:layout_width="wrap_content"-->
                            <!--                            android:layout_height="wrap_content"-->
                            <!--                            android:layout_alignParentEnd="true"-->
                            <!--                            android:layout_alignParentBottom="true"-->
                            <!--                            android:src="@drawable/ic_new_post_home" />-->

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgInsta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_insta_home" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/lFacebookPost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30dp"
                    app:cardCornerRadius="@dimen/_20sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_fb_post_home"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/_15dp"
                            android:layout_toEndOf="@+id/imgFb"
                            android:layout_centerVertical="true">

                            <TextView
                                android:id="@+id/txtCreateReview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/create"
                                android:textColor="@color/black_21"
                                android:textSize="@dimen/_20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txtCreateReview"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Facebook Post"
                                android:textColor="@color/black_35"
                                android:textSize="@dimen/_22sp" />


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgFb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/img_fb_home" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/lTweeterPost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_30dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_20sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_tweeter_post_home">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/_15dp"
                            android:layout_toEndOf="@id/imgTweeter"
                            android:layout_centerVertical="true">

                            <TextView
                                android:id="@+id/txtCreateFakePost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/create"
                                android:textColor="@color/black_21"
                                android:textSize="@dimen/_20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txtCreateFakePost"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_toStartOf="@+id/imgSocialMedia"
                                android:text="Twitter Post"
                                android:textColor="@color/black_35"
                                android:textSize="@dimen/_22sp" />



                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgTweeter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/img_tweeter_home" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/lWhatsAppChat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/_10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_20sp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_whatsapp_post_home">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/_15dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/imgWhatsapp">

                            <TextView
                                android:id="@+id/txtCreateQuote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:text="@string/create"
                                android:textColor="@color/black_21"
                                android:textSize="@dimen/_20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txtCreateQuote"
                                android:fontFamily="@font/roboto_bold"
                                android:text="WhatsApp chat"
                                android:textColor="@color/black_35"
                                android:textSize="@dimen/_22sp" />

                            <!--                        <ImageView-->
                            <!--                            android:layout_width="wrap_content"-->
                            <!--                            android:layout_height="wrap_content"-->
                            <!--                            android:layout_alignParentStart="true"-->
                            <!--                            android:layout_alignParentBottom="true"-->
                            <!--                            android:layout_marginVertical="@dimen/_20dp"-->
                            <!--                            android:src="@drawable/ic_arrow_right" />-->


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgWhatsapp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/img_whatsapp_home" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>




            </LinearLayout>




        </ScrollView>
    </LinearLayout>


</RelativeLayout>