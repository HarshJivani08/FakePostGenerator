<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginEnd="@dimen/_50dp"
    android:clipToPadding="false">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_150dp"
        android:background="@drawable/bg_receive_wtsp_corner"
        app:cardCornerRadius="@dimen/_5dp"
        app:cardElevation="@dimen/_0dp"
        android:paddingStart="@dimen/_20dp"
        android:paddingEnd="@dimen/_10dp">
        <ImageView
            android:id="@+id/imgReceiverImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginVertical="@dimen/_10dp"
            android:src="@drawable/ic_image_placeholder"
            android:visibility="visible" />


            <!--  android:background="@drawable/bg_receiver"-->


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_7dp"
                android:padding="@dimen/_5dp"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/imgReceiverImage"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_msg"
                    app:tint="@color/white" />
                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    android:text="10:30 am"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sp" />

            </LinearLayout>


    </RelativeLayout>
</RelativeLayout>

