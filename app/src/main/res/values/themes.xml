<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FakePostGenerator" parent="Theme.MaterialComponents.Light.NoActionBar" />


    <!--header text-->
    <style name="HeaderText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_centerInParent">true</item>
    </style>


    <!--**********************-->

    <style name="FullButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_53dp</item>
        <!--<item name="android:layout_marginLeft">@dimen/_30dp</item>
        <item name="android:layout_marginRight">@dimen/_30dp</item>-->
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_17sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/bg_aaccount_btn</item>
        <!-- <item name="android:textColor">@drawable/selector_white_text</item>-->
        <item name="android:windowDisablePreview">false</item>
    </style>

    <style name="SmallButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_53dp</item>
        <!--<item name="android:layout_marginLeft">@dimen/_30dp</item>
        <item name="android:layout_marginRight">@dimen/_30dp</item>-->
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_17sp</item>
        <item name="paddingStart">@dimen/_10dp</item>
        <item name="paddingEnd">@dimen/_10dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/bg_aaccount_btn</item>
        <!-- <item name="android:textColor">@drawable/selector_white_text</item>-->
        <item name="android:windowDisablePreview">false</item>
    </style>


    <!--dialog-->

    <style name="DialogThme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="android:windowAnimationStyle">@style/DialogAnimation</item>-->
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>



    <!--bottom_sheet-->

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="cornerRadius">@dimen/_10dp</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_dialog</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>


    <style name="RoundImage.8" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <style name="RoundImage.10" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="RoundImage.50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="behavior_peekHeight">400dp</item>
        <item name="android:windowSoftInputMode">adjustResize|adjustPan</item>
    </style>

    <style name="CardShapeEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/_10dp</item>
        <item name="android:background">@drawable/bg_edt_edit_post</item>
        <item name="android:outlineSpotShadowColor">@color/editetect_shadow_color</item>

    </style>


</resources>